<div class="gmcq-inner component-inner" role="region" aria-label="{{_globals._components._gmcq.ariaRegion}}">
    {{> component this}}
    <div class="gmcq-widget component-widget {{#unless _isEnabled}} disabled {{#if _isComplete}} complete submitted user {{#if _isCorrect}}correct{{/if}} {{/if}} {{/unless}}">
        {{#each _items}}
        <div class="gmcq-item component-item {{#unless ../_isEnabled}} {{#if correct}}correct{{else}}incorrect{{/if}} {{/unless}} item-{{@index}} {{odd @index}}">
            <input type="checkbox" id="{{../_id}}-{{@index}}"/>
            <label for="{{../_id}}-{{@index}}" class="component-item-color component-item-text-color component-item-boder {{#if selected}}selected{{/if}}">
            
                <img src="{{_graphic.src}}" alt="{{_graphic.alt}}" data-large="{{_graphic.large}}" data-small="{{_graphic.small}}"/>
            
                <div class="gmcq-item-checkbox">
                    <div class="gmcq-item-state">
                        <div class="gmcq-item-icon gmcq-answer-icon icon"></div>
                        <div class="gmcq-item-icon gmcq-correct-icon icon icon-tick"></div>
                        <div class="gmcq-item-icon gmcq-incorrect-icon icon icon-cross"></div>
                    </div>
                    <h5 class="gmcq-item-inner">
                        {{{text}}}
                    </h5>
                </div>
            </label>
        </div>
        {{/each}}
        <div class="buttons"  role="button">
            {{> buttons this}}
        </div>
    </div>
</div>
